@{
    ViewBag.Title = "Autenticación";
}
<div class="container">
    <div class="col-lg-4 col-md-3 col-sm-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-8">
        
        <div class="row loginbox ">
            <div class="col-lg-12 text-center">
                <span class="singtext">
                    <img src="~/Areas/Admin/Assets/img/logo.jpg" class="center-block img-responsive" />
                  
                </span>
            </div>
        </div>
        <div class="row loginbox logincont">
            @using (Html.BeginForm("Acceder", "Login", FormMethod.Post))
            {
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <input class="form-control" type="text" name="nom_usu" placeholder="Por favor ingrese su usuario">
                </div>
                <div class="col-lg-12  col-md-12 col-sm-12">
                    <input class="form-control" type="password" name="clave" placeholder="Por favor ingrese su contraseña">
                </div>
                <div class="col-lg-12  col-md-12 col-sm-12">
                    <button data-ajax="true" type="submit" class="btn submitButton">
                        Ingresar
                    </button>
                </div>
            }
        </div>
        <div class="row forGotPassword">               
        </div>
        <br>
        <br>
        <footer class="footer">
            <p>COPYRIGHT © 2017 Poderosa Mining Corporation. All Rights Reserved. All companies and logos are trade. Créditos </p>
        </footer> <!--footer Section ends-->
        </div>
</div>
