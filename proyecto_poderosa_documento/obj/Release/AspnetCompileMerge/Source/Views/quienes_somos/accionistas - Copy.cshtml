<!---model List<Model.documento>-->
@model IEnumerable<Model.ViewDocumento>
@{
    var myQuery =
            from item in Model
            group item by item.valor_ano into g
            orderby g.Key descending
            select new
            {
                ano = g.Key,
                        //g.Key,
                        // valor = g.Key.valor_ano,
                        trimestres =
                    from o in g
                    group o by o.trimestre into d
                    orderby d.Key ascending
                    select new
                    {
                        trimestre = d.Key,
                        Values = from p in d
                                 group p by p.valor_categoria into m
                                 orderby m.Key ascending
                                 select new
                                 {
                                     categoria = m.Key,
                                     Values = m
                                 }
                    }
            };
}
