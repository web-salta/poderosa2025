        <section class="py-seccion    bg-dorado ">
            <div class="container">
                <h2 class="blanco">DOCUMENTACIÓN</h2>

                <div id="parentHorizontalTab2">
                    <ul class="resp-tabs-list hor_1">
                        @{ var j = 0;}
                        @foreach (var item in myQuery)
                        {
                            <li>@item.ano</li>
                            j = j + 1;
                        }
                    </ul>

                    <input type="hidden" id="cantidad_ano" value="@j" />
                    <div class="resp-tabs-container hor_1">
                        @{ var i = 1;}
                        @foreach (var item in myQuery)
                        {
                            <div>
                                <!--vertical Tabs-->
                                <div id="ChildVerticalTab2_@i">
                                    <ul class="resp-tabs-list ver_@i item">
                                        @foreach (var trimestre in item.trimestres)
                                        {
                                            <li>
                                                @switch (trimestre.trimestre)
                                                {
                                                    case 1:
                                                        <text>Trimestre 1</text>
                                                        break;
                                                    case 2:
                                                        <text>Trimestre 2</text>
                                                        break;
                                                    case 3:
                                                        <text>Trimestre 3</text>
                                                        break;
                                                    case 4:
                                                        <text>Trimestre 4</text>
                                                        break;
                                                    case 5:
                                                        <text>Otros</text>
                                                        break;
                                                    default:
                                                        <text>Por favor comuniquese con el adminitrador</text>
                                                        break;
                                                }
                                            </li>
                                        }
                                    </ul>
